<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SearchStaff</title>
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
  </head>
  <body>
    <header>
      <div class="header__wrapper">
        <div class="header header__colored">
          <img
            src="../img/imagemutted.svg"
            alt="imagemutted"
            class="header__item"
          />
          <nav class="header__item">
            <a href="/" class="logo">SearchStaff</a>
          </nav>
          <button class="header__signup header__item">вход</button>
        </div>
      </div>
    </header>

    <section>
      <div class="wrapper">
        <div class="company">
          <div class="company__info">
            <div class="company__info-image">
              <img src="../img/personWithoutPhoto.svg" alt="company-image" />
            </div>
            <div class="company__info-text">
              <div class="company__info-text_desc">
                <h2><%= employer.firstname %> <%= employer.lastname %></h2>
                <div class="company__info-text_desc-contacts">
                  <p><%= employer.employeesProfession.profession %></p>
                  <p><%= employer.contacts %></p>
                  <p>qwerty@mail.ru</p>
                </div>
              </div>
              <div class="company__info-text_edits">
                <!-- <a href="#">
                  <img src="../img/edits.svg" alt="edits" />
                  Редактировать
                </a> -->
              </div>
            </div>
          </div>
          <div class="company__description">
            <p>
              <%= employer.description %><br>
              Level profession: <%= employer.employeesLevel.level %>
            </p>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="wrapper">
        <div class="topEmployees">
          <h3>портфолио:</h3>
          <div class="topEmployees__items">
            
            <div class="topEmployees__items-item">
              <img
              style="border-radius: 0;"
                src="../img/personWithoutPhoto.svg"
                alt="personWithoutPhoto"
              />
              <div class="topEmployees__items-item__text">
                <p class="topEmployees__items-item__text-fio">
                  <%= employer.employeesPortfolio.title %>
                </p>
                <p class="topEmployees__items-item__text-profession">
                  <%= employer.employeesPortfolio.description %>
                </p>
                <p class="topEmployees__items-item__text-company">
                  <a href="/company/<%=employer.companyId %>"><%= employer.company.name %></a>
                </p>
                <!-- <div class="topEmployees__items-item__text-contacts">
                  <p>+7(999)123-56-78</p>
                  <p>qwerty@mail.ru</p>
                </div> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
